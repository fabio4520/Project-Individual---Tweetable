<section class="section-md">
  <div class="container flex flex-column wrap text-center items-center mb-4 bg-white">
    <h1>Edit comment</h1>

   <%= form_with(model: @comment) do |form| %>
      <% if @comment.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% @comment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if current_user %>
        <div hidden>
          <%= form.label :user_id %>
          <%= form.text_field :user_id, value: current_user.id %>
        </div>
      <%end%>

      <% if current_user %> 
        <div hidden>
          <%= form.label :tweet_id, style: "display: block" %>
          <%= form.text_field :tweet_id, value: @comment.tweet.id %>
        </div>
      <%end%>

      <div class="grid">
        <% if current_user.avatar.attached? %>
          <%= image_tag(current_user.avatar, class: "image_circle_sm") %>
        <%end%>
        <div class="input ">
          <div class="field flex mb-4">
            <%= form.text_area :body,
            placeholder: "Remember to thing before write...",
              class: "input__container select__input border-none" %>
          </div>

          <div class="actions flex flex-column wrap items-right">
            <%= form.submit "Comment", class: "button button--primary "  %>
          </div>
        </div>
      </div>
    <% end %>

    <br>

    <div>
      <%= link_to "Show this comment", @comment %> |
      <%= link_to "Back to comments", comments_path %>
    </div>
  </div>
</section>
  
